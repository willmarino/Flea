<!DOCTYPE html>
<html>
  <head>
    <title>Flea</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Arimo|Quicksand&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Courgette|Courier+Prime|Inria+Serif&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <% if logged_in? %>
      <script type="text/javascript">
        window.currentuser = <%= render('/api/users/user.json.jbuilder', user: current_user).html_safe %>
      </script>
    
    <% end %>

    


  </head>

  <body>
    <%= yield %>
  </body>
</html>
